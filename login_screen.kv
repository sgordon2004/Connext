ScreenManager:
    Screen:

        MDCard:
            size_hint: None, None
            size: 1000, 1000
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25

            orientation: "vertical"

        MDLabel:
            id: company name
            text: "CONNEXT"
            font_style: "H6" # makes the text a heading
            font_size: 80
            halign: "center" #horizontal allignment of text
            size_hint_y: None
            height: 2050 #self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            hint_text: "Username"
            hint_text_size: 50
            icon_right: "account"
            size_hint_x: None
            width: 800
            font_size: 50
            pos_hint: {"center_x": 0.5, "center_y": 0.75}

        MDTextField:
            id: password
            hint_text: "Password"
            hint_text_size: 50
            icon_right: "eye-off"
            size_hint_x: None
            width: 800
            font_size: 50
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Log In"
            font_size: 50
            text_color: "white"
            pos_hint:{"center_x": 0.5, "center_y": 0.35}
            on_press: app.logger()

        MDRoundFlatButton:
            text: "Clear"
            font_size: 50
            text_color: "white"
            pos_hint:{"center_x": 0.5, "center_y": 0.25}
            on_press: app.clear()
        
